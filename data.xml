<root>
    <setions>
        <main>
            <section name="STATUS" regexp="(x)? ?" index="0"></section>
            <section name="PRIORITY" regexp="(\([A-Z]{1}\) )?" index="1"></section>
            <section name="COMPLETION_DATE" regexp="([0-9]{4}-[0-9]{2}-[0-9]{2} )?" index="2"></section>
            <section name="CREATION_DATE" regexp="([0-9]{4}-[0-9]{2}-[0-9]{2} )?" index="3"></section>
            <section name="DESCRIPTION" regexp="([a-zA-Z \.\-0-9]+)" index="4"></section>
            <section name="PROJECTS" regexp="(\@[A-Za-z]+)? ?" index="5"></section>
            <section name="CONTEXTS" regexp="(\+[A-Za-z]+)? ?" index="6"></section>
        </main>
        <extra>
            <section name="DUE" regexp="(due\:([0-9]{4}\-[0-9]{2}-[0-9]{2})( (2[0-3]|[01][0-9])\:([0-5][0-9])\:([0-5][0-9]))?)? ?" index="7"></section>
            <section name="RECURING" regexp="(recuring\:(daily)|(weekly)|(biweekly))?" index="8"></section>
        </extra>
    </setions>
</root>
